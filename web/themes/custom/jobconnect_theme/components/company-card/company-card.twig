<article class="company-card rounded-2xl p-6">
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-start space-x-4">
      <div class="company-logo bg-white shadow-sm flex items-center justify-center">
        <span class="text-lg font-bold text-teal-600">{{ name|slice(0, 2)|upper }}</span>
      </div>
      <div>
        <h3 class="font-bold text-lg text-gray-900 mb-1">{{ name }}</h3>
        <p class="text-gray-600 text-sm mb-2">{{ summary }}</p>
        <div class="flex flex-wrap gap-2 text-xs">
          <span class="bg-amber-100 text-amber-700 px-3 py-1 rounded-full font-semibold">{{ rating }}</span>
          <span class="bg-teal-100 text-teal-700 px-3 py-1 rounded-full font-semibold">{{ size }}</span>
          <span class="bg-slate-100 text-slate-700 px-3 py-1 rounded-full font-semibold">{{ location }}</span>
        </div>
      </div>
    </div>
    <div class="text-right">
      <span class="text-teal-600 font-semibold">{{ open_roles }}</span>
    </div>
  </div>
  {% if tags %}
    <div class="flex gap-2 text-xs stats-chip mb-4">
      {% for tag in tags %}
        <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full">{{ tag }}</span>
      {% endfor %}
    </div>
  {% endif %}
  <a href="{{ link }}" class="btn-primary text-white px-5 py-2 rounded-lg text-sm font-semibold">View Roles</a>
</article>
